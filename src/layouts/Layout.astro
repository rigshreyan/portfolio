---
import { SEO_INFO } from '../consts';
import { ClientRouter } from 'astro:transitions';

type Props = { title: string };

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth" style="background-color: #000000; color: #ffffff;">
  <head>
    <!-- CRITICAL: Theme must be set BEFORE any content loads -->
    <script is:inline>
      (function() {
        try {
          const savedTheme = localStorage.getItem('theme');
          const theme = (savedTheme === 'light' || savedTheme === 'dark') ? savedTheme : 'dark';
          const root = document.documentElement;

          if (theme === 'light') {
            root.classList.add('light-theme');
            root.style.setProperty('background-color', '#ffffff', 'important');
            root.style.setProperty('color', '#000000', 'important');
          } else {
            root.classList.remove('light-theme');
            root.style.setProperty('background-color', '#000000', 'important');
            root.style.setProperty('color', '#ffffff', 'important');
          }
        } catch (e) {
          // If localStorage fails, default to dark
          document.documentElement.style.setProperty('background-color', '#000000', 'important');
          document.documentElement.style.setProperty('color', '#ffffff', 'important');
        }
      })();
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="generator" content={Astro.generator} />
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-Frame-Options" content="DENY" />
    <meta http-equiv="X-XSS-Protection" content="1; mode=block" />
    <meta http-equiv="Referrer-Policy" content="strict-origin-when-cross-origin" />
    <meta name="robots" content="index, follow" />
    {SEO_INFO.map((tag) => <meta name={tag.name} content={tag.content} />)}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <title>{title}</title>

    <ClientRouter />
    <style>
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        font-feature-settings: 'cv02', 'cv03', 'cv04', 'cv11';
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      /* Custom scrollbar */
      ::-webkit-scrollbar {
        width: 6px;
      }

      ::-webkit-scrollbar-track {
        background: transparent;
      }

      ::-webkit-scrollbar-thumb {
        background: rgba(156, 163, 175, 0.5);
        border-radius: 3px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: rgba(156, 163, 175, 0.8);
      }

      .dark ::-webkit-scrollbar-thumb {
        background: rgba(75, 85, 99, 0.5);
      }

      .dark ::-webkit-scrollbar-thumb:hover {
        background: rgba(75, 85, 99, 0.8);
      }

      /* Smooth transitions for theme switching - Targeted only */
      body,
      .header,
      .theme-toggle,
      .instagram-link {
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
      }
    </style>
  </head>
  <body class="transition-colors duration-300 antialiased">
    <slot />

    <script>
      import '../load-gallery.js';
    </script>
  </body>
</html>
