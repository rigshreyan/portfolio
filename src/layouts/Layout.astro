---
import { SEO_INFO } from '../consts';
import { ClientRouter } from 'astro:transitions';

type Props = { title: string };

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    {SEO_INFO.map((tag) => <meta name={tag.name} content={tag.content} />)}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <title>{title}</title>
    <ClientRouter />

    <!-- AOS (Animate On Scroll) CSS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <style>
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        font-feature-settings: 'cv02', 'cv03', 'cv04', 'cv11';
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      /* Custom scrollbar */
      ::-webkit-scrollbar {
        width: 6px;
      }

      ::-webkit-scrollbar-track {
        background: transparent;
      }

      ::-webkit-scrollbar-thumb {
        background: rgba(156, 163, 175, 0.5);
        border-radius: 3px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: rgba(156, 163, 175, 0.8);
      }

      .dark ::-webkit-scrollbar-thumb {
        background: rgba(75, 85, 99, 0.5);
      }

      .dark ::-webkit-scrollbar-thumb:hover {
        background: rgba(75, 85, 99, 0.8);
      }

      /* Smooth transitions for theme switching */
      * {
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
      }

      /* AOS Custom Overrides - TwoCreate Style */
      [data-aos] {
        transition-duration: 0.7s !important;
        transition-timing-function: ease-in-out !important;
      }

      /* Custom fade-up animation with TwoCreate's exact timing */
      [data-aos="fade-up"] {
        transform: translate3d(0, 30px, 0);
        opacity: 0;
      }

      [data-aos="fade-up"].aos-animate {
        transform: translate3d(0, 0, 0);
        opacity: 1;
      }

      /* Smooth scroll behavior enhancements */
      html {
        scroll-behavior: smooth;
      }

      /* Reduce motion for accessibility */
      @media (prefers-reduced-motion: reduce) {
        [data-aos] {
          animation: none !important;
          transition: none !important;
        }
      }
    </style>
  </head>
  <body class="bg-white dark:bg-black transition-colors duration-300 antialiased">
    <slot />

    <script>
      import '../load-gallery.js';
      import AOS from 'aos';

      // Initialize AOS with TwoCreate-style configuration
      document.addEventListener('DOMContentLoaded', function() {
        AOS.init({
          duration: 700,           // TwoCreate's 0.7s timing
          easing: 'ease-in-out',   // TwoCreate's easing
          once: true,              // Animation happens only once
          offset: 120,             // Trigger 120px before element enters viewport
          delay: 0,                // No global delay
          anchorPlacement: 'top-bottom' // Trigger when element top crosses viewport bottom
        });

        // Refresh AOS on Astro page transitions
        document.addEventListener('astro:after-swap', () => {
          AOS.refresh();
        });
      });
    </script>
  </body>
</html>
