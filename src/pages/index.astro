---
import { Img } from 'astro-imagetools/components';
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import { PERSONAL_INFO } from '../consts';
import { galleryItems } from '../data/gallery';

const images = galleryItems.map((item) => ({
  label: item.label,
  href: item.href,
  category: item.category,
  size: { width: 800, height: 600 }
}));
---

<Layout title={PERSONAL_INFO.title}>
  <div class="flex h-screen flex-col justify-between py-4 sm:py-6 lg:py-8">
    <main class="mb-auto">
      <div class="my-16 sm:my-20">
        <h1
          class="mb-6 text-center text-3xl font-light text-gray-900 md:mb-8 md:text-4xl lg:text-5xl"
        >
          {PERSONAL_INFO.title}
        </h1>

        <p
          class="mx-auto max-w-2xl text-center text-lg text-gray-600 md:text-xl"
        >
          {PERSONAL_INFO.subtitle}
        </p>
      </div>

      <div class="mx-auto max-w-7xl px-6 md:px-12">
        <div
          id="my-gallery"
          class="pswp-gallery gallery grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:gap-12"
        >
          {
            images.map((image) => (
              <a
                href={image.href}
                data-cropped="true"
                data-pswp-width={image.size.width}
                data-pswp-height={image.size.height}
                class="gallery-item group relative block overflow-hidden bg-white transition duration-300 hover:shadow-lg"
              >
                <div class="relative aspect-[4/3] overflow-hidden">
                  <Img
                    src={image.href}
                    alt={image.label}
                    format="webp"
                    width={image.size.width / 3}
                    class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
                  />
                </div>

                <div class="p-4">
                  <h3 class="text-sm font-medium text-gray-900 transition duration-200 group-hover:text-gray-600">
                    {image.label}
                  </h3>
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </main>

    <Footer />
  </div>
</Layout>
