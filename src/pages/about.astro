---
/*
 * ============================================================================
 * FEATURE INDEX - src/pages/about.astro
 * ============================================================================
 *
 * FRONTMATTER (Lines 1-22)
 * └─ Imports and personal info extraction
 *
 * HTML (Lines 24-70)
 * └─ About Page Layout
 *    ├─ Page Header (Line 27)
 *    ├─ Content Grid (Line 37)
 *    │  ├─ Text Content (Line 38) - Role, name, bio, contact
 *    │  └─ Avatar Image (Line 65)
 *    └─ Footer (Line 81)
 *
 * ============================================================================
 */

import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import { PERSONAL_INFO } from "../consts";

const { role, name, avatar, contact, about } = PERSONAL_INFO;

const title = `${name} - About`;
---

<Layout title={title}>
  <div class="flex h-screen flex-col justify-between py-4 sm:py-6 lg:py-8">
    <main class="mb-auto flex flex-col items-center align-middle">
      <div class="my-16 sm:my-20">
        <h1
          class="mb-8 text-center text-3xl font-light text-gray-900 md:mb-12 lg:text-4xl"
        >
          About
        </h1>
      </div>

      <div class="mx-auto max-w-5xl bg-white px-6 py-8 sm:py-12">
        <div class="max-w-screen-lg px-4 md:px-8">
          <div class="grid items-center gap-8 sm:grid-cols-2">
            <div
              class="flex flex-col items-center justify-center py-12 sm:items-start"
            >
              <p
                class="mb-3 text-sm font-medium uppercase tracking-wide text-gray-500 md:text-base"
              >
                {role}
              </p>
              <h2
                class="mb-6 text-center text-2xl font-light text-gray-900 sm:text-left md:text-3xl"
              >
                {name}
              </h2>

              <p
                class="mb-8 text-center leading-relaxed text-gray-600 sm:text-left md:text-lg"
              >
                {about}
              </p>

              <a
                href={contact}
                class="inline-block border border-gray-300 px-8 py-3 text-center text-sm font-medium text-gray-700 outline-none transition duration-200 hover:border-gray-400 hover:bg-gray-50 focus-visible:ring focus-visible:ring-gray-200 md:text-base"
                >Contact me</a
              >
            </div>

            <div
              class="relative mx-auto h-fit max-w-xs overflow-hidden rounded-full bg-gray-50 object-cover object-center sm:max-w-md"
            >
              <img
                src={avatar}
                alt="Portrait"
                class="rounded-full h-full w-full object-cover"
                width="600"
                height="600"
              />
            </div>
          </div>
        </div>
      </div>
    </main>

    <Footer />
  </div>
</Layout>
